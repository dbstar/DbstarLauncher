<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_background" >

    <TextView
        android:id="@+id/guodiansettings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:text="@string/systemsettings_guodian" />

    <TableLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
		android:layout_below="@id/guodiansettings_title"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:stretchColumns="1" >

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:text="@string/guodiansettings_version"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guodiansettings_serverip"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_serverIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guodiansettings_serverport"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guodiansettings_username"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guodiansettings_password"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guodiansettings_serialnumber"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/editText_serialnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_bgselector"
                android:focusable="true"
                android:nextFocusUp="@+id/editText_password"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/button_text_ok"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    
	<include
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/footerview" />

</RelativeLayout>